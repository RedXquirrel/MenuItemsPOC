<?xml version="1.0" encoding="UTF-8"?>
<ViewCell 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MenuItemsPOC.Controls.SwitchableMenuItemsDemoViewCell"
    >
    <Grid>
        <Grid BackgroundColor="Yellow"  VerticalOptions="StartAndExpand" ColumnSpacing="0" RowSpacing="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="TitleLabel" Text="{Binding Title}" Margin="10,0,10,0" VerticalOptions="Center" />
            <Label Grid.Row="1" x:Name="StatusLabel" Text="{Binding Status, Converter={StaticResource StatusToStringConverter}}"  Margin="10,0,10,0" VerticalOptions="Center" />
        </Grid>
    </Grid>
</ViewCell>
